<!DOCTYPE html>
<html>
<head>
  <title>AssignmentFinal</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
  <% if current_user.nil? %>
      <%= link_to 'Sign In', '/auth/facebook' %>
  <% else %>
      <%= current_user.name + ' | ' %>
      <%= link_to 'Logout', '/logout' %>
  <% end %>
</div>
<div class="nav">
  <div class="wrap">
    <a class="logo" href="/"><%= image_tag 'logo.png' %></a>

    <div class="links">
      <ul>
        <% unless current_user.nil? %>
            <li><%= link_to 'My Petitions', '/petitions/mypetitions' %></li>
        <% end %>
        <li><%= link_to 'Petitions', petitions_path %></li>
        <li><%= link_to 'Success', '/success/index' %></li>
        <li><%= link_to 'About', '/about/index' %></li>
      </ul>
    </div>
  </div>
</div>

<div class="content">
  <%= yield %>
</div>
<div class="footer"></div>
</body>

</html>
