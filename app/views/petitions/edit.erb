<div class="content-left">
  <p>
    <strong>User:</strong>
    <%= @petition.user.name %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @petition.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= @petition.body %>
  </p>

  <p>
    <strong>Target:</strong>
    <%= @petition.target %>
  </p>

  <p>
    <strong>Votes:</strong>
    <%= @petition.votes.count %>
  </p>

  <p>
    <%= button_to 'Delete petition', petition_path,
                :confirm => 'Are you sure?',
                :method => :delete %>
  </p>

</div>